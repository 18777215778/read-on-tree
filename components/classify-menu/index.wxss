.classify-menu {
  display: flex;
  flex-flow:row nowrap;
  margin-bottom: 20rpx;
}

.classify-menu--list {
  flex: 1;
  display: flex;
  flex-flow: row wrap;
}

.classify-menu--title,
.classify-menu--item {
  display: inline-block;
  margin: 0 30rpx 20rpx 0;
  padding: 10rpx 40rpx;
  font-size: 30rpx;
  line-height: 1em;
}

.classify-menu--title {
  padding-left: 0;
  padding-right: 0;
  color: #909090;
}

.classify-menu--item {
  background-color: #f5f5f5;
}